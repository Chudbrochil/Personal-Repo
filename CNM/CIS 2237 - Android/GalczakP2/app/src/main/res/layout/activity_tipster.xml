<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="mobiletipster.galczakp2.cis2237.com.galczakp2.TipsterActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="2"
        android:id="@+id/editNumDiners"
        android:layout_row="2"
        android:layout_column="2"
        android:minLines="1"
        android:layout_gravity="end|right"
        android:textSize="@dimen/text_size"
        android:inputType="number"
        android:lines="1"
        android:digits="0123456789"
        android:maxLength="2"
        android:layout_marginRight="@dimen/right_margin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/galczakp2_mobile_tipster"
        android:id="@+id/textView1"
        android:layout_row="0"
        android:layout_column="0"
        android:singleLine="false"
        android:layout_columnSpan="3"
        android:layout_gravity="fill_horizontal|center_horizontal"
        android:paddingBottom="@dimen/title_padding"
        android:textAlignment="center"
        android:textSize="@dimen/title_text_size" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/amount_of_bill"
        android:id="@+id/textView2"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnSpan="1"
        android:labelFor="@+id/editBillAmt"
        android:textSize="@dimen/text_size" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/number_of_diners"
        android:id="@+id/textView3"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_columnSpan="1"
        android:labelFor="@+id/txtNumDiners"
        android:textSize="@dimen/text_size" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/tip_amount"
        android:id="@+id/textView4"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_gravity="left"
        android:textSize="@dimen/text_size"
        android:paddingBottom="@dimen/standard_padding"
        android:paddingTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/total_with_tip"
        android:id="@+id/textView5"
        android:layout_row="6"
        android:layout_column="0"
        android:layout_gravity="left"
        android:textSize="@dimen/text_size"
        android:paddingBottom="@dimen/standard_padding" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/each_diner_share"
        android:id="@+id/textView6"
        android:layout_row="7"
        android:layout_column="0"
        android:layout_gravity="left"
        android:textSize="@dimen/text_size"
        android:paddingBottom="@dimen/standard_padding" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="$0.00"
        android:id="@+id/txtTipAmt"
        android:layout_row="5"
        android:layout_column="2"
        android:layout_gravity="right"
        android:textSize="@dimen/text_size"
        android:paddingBottom="@dimen/standard_padding"
        android:maxLength="8"
        android:layout_marginRight="@dimen/right_margin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="$0.00"
        android:id="@+id/txtTotalWTip"
        android:layout_row="6"
        android:layout_column="2"
        android:layout_gravity="right"
        android:textSize="@dimen/text_size"
        android:paddingBottom="@dimen/standard_padding"
        android:maxLength="8"
        android:layout_marginRight="@dimen/right_margin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="$0.00"
        android:id="@+id/txtDinerShare"
        android:layout_row="7"
        android:layout_column="2"
        android:layout_gravity="right"
        android:textSize="@dimen/text_size"
        android:paddingBottom="@dimen/standard_padding"
        android:maxLength="8"
        android:layout_marginRight="@dimen/right_margin" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/editBillAmt"
        android:layout_row="1"
        android:layout_column="2"
        android:editable="true"
        android:text="$20.00"
        android:minLines="1"
        android:textSize="@dimen/text_size"
        android:inputType="number|numberDecimal"
        android:lines="1"
        android:digits="0123456789."
        android:maxLength="8"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/right_margin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/txtBillAmt"
        android:layout_row="1"
        android:layout_column="2"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/right_margin"
        android:textSize="@dimen/text_size"
        android:autoText="false"
        android:padding="@dimen/padding8"
        android:background="@android:color/white"
        android:text="$20.00"
        android:maxLength="8" />

    <SeekBar
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_columnSpan="3"
        style="@android:style/Widget.DeviceDefault.Light.SeekBar"
        android:progress="15"
        android:thumb="@drawable/abc_list_selector_disabled_holo_light"
        android:max="30"
        android:indeterminate="false" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editSeekBarValue"
        android:layout_row="4"
        android:layout_column="0" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:id="@+id/btnCalc"
        android:layout_row="8"
        android:layout_column="0"
        android:layout_marginBottom="@dimen/bottom_margin"
        android:width="@dimen/button_width"
        android:height="@dimen/button_height"
        android:textSize="@dimen/button_text_size" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:id="@+id/btnReset"
        android:layout_row="8"
        android:layout_column="2"
        android:layout_marginBottom="@dimen/bottom_margin"
        android:width="@dimen/button_width"
        android:height="@dimen/button_height"
        android:textSize="@dimen/button_text_size" />

</GridLayout>
